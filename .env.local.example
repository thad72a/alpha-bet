# Bittensor Alpha Bet - Environment Configuration
# Copy this to .env.local and fill in your values

# ============================================
# Deployment Configuration (REQUIRED)
# ============================================
# Your wallet private key for deploying contracts
# Get this from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here_without_quotes

# ============================================
# Network Configuration
# ============================================
NEXT_PUBLIC_NETWORK=bittensorTestnet
NEXT_PUBLIC_CHAIN_ID=945
NEXT_PUBLIC_RPC_URL=https://test.chain.opentensor.ai

# ============================================
# Smart Contract Addresses (Auto-filled after deployment)
# ============================================
NEXT_PUBLIC_BETTING_CONTRACT_ADDRESS=

# ============================================
# Wallet Integration
# ============================================
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# ============================================
# Block Explorer
# ============================================
NEXT_PUBLIC_BLOCK_EXPLORER_URL=https://evm.taostats.io
